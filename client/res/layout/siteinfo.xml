                   android:layout_alignParentLeft="true" android:layout_marginLeft="95dp"
                   android:layout_alignTop="@+id/textView" android:layout_marginTop="160dp"
                   android:background="@drawable/shengdan16x16_45"/>
        <ImageView android:layout_width="12dp" android:layout_height="12dp" android:id="@+id/imageView7"
                   android:layout_alignParentLeft="true" android:layout_marginLeft="110dp"
                   android:layout_alignTop="@+id/textView" android:layout_marginTop="160dp"
                   android:background="@drawable/shengdan16x16_45"/>
        <ImageView android:layout_width="12dp" android:layout_height="12dp" android:id="@+id/imageView8"
                   android:layout_alignParentLeft="true" android:layout_marginLeft="125dp"
                   android:layout_alignTop="@+id/textView" android:layout_marginTop="160dp"
                   android:background="@drawable/shengdan16x16_45"/>
        <ImageView android:layout_width="12dp" android:layout_height="12dp" android:id="@+id/imageView9"
                   android:layout_alignParentLeft="true" android:layout_marginLeft="140dp"
                   android:layout_alignTop="@+id/textView" android:layout_marginTop="160dp"
                   android:background="@drawable/shengdan16x16_45"/>
        <ImageView android:layout_width="12dp" android:layout_height="12dp" android:id="@+id/imageView10"
