                   android:background="@drawable/shengdan16x16_45"/>
        <ImageView android:layout_width="12dp" android:layout_height="12dp" android:id="@+id/imageView16"
                   android:layout_alignParentLeft="true" android:layout_marginLeft="230dp"
                   android:layout_alignTop="@+id/textView" android:layout_marginTop="160dp"
                   android:background="@drawable/shengdan16x16_45"/>
        <ImageView android:layout_width="12dp" android:layout_height="12dp" android:id="@+id/imageView17"
                   android:layout_alignParentLeft="true" android:layout_marginLeft="245dp"
                   android:layout_alignTop="@+id/textView" android:layout_marginTop="160dp"
                   android:background="@drawable/shengdan16x16_45"/>
        <ImageView android:layout_width="12dp" android:layout_height="12dp" android:id="@+id/imageView18"
                   android:layout_alignParentLeft="true" android:layout_marginLeft="260dp"
                   android:layout_alignTop="@+id/textView" android:layout_marginTop="160dp"
                   android:background="@drawable/shengdan16x16_45"/>
        <ImageView android:layout_width="12dp" android:layout_height="12dp" android:id="@+id/imageView19"
                   android:layout_alignParentLeft="true" android:layout_marginLeft="275dp"
                   android:layout_alignTop="@+id/textView" android:layout_marginTop="160dp"
                   android:background="@drawable/shengdan16x16_45"/>
        <ImageView android:layout_width="12dp" android:layout_height="12dp" android:id="@+id/imageView20"
                   android:layout_alignParentLeft="true" android:layout_marginLeft="290dp"
                   android:layout_alignTop="@+id/textView" android:layout_marginTop="160dp"
                   android:background="@drawable/shengdan16x16_45"/>
        <ImageButton
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:id="@+id/mapButton"
                android:background="@drawable/map_marker"
                android:focusable="true" android:clickable="true"
                android:layout_alignLeft="@+id/textView" android:layout_alignTop="@+id/imageButton"
                android:layout_alignBottom="@+id/imageButton"/>

    </RelativeLayout>

</LinearLayout>








